{
  "name": "phpstan",
  "displayName": "PHP Static Analysis",
  "description": "Static analysis support for PHP with PhpStan",
  "version": "1.1.4",
  "license": "MIT",
  "publisher": "breezelin",
  "engines": {
    "vscode": "^1.40.0"
  },
  "icon": "images/icon.png",
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:php"
  ],
  "repository": {
    "type": "github",
    "url": "https://github.com/breeze2/vscode-phpstan"
  },
  "main": "./out/extension",
  "contributes": {
    "configuration": [
      {
        "type": "object",
        "title": "PhpStan Configuration",
        "properties": {
          "phpstan.level": {
            "type": "string",
            "default": "max",
            "description": "PhpStan rule levels 0-7, \"config\" indicates that it's set in config file"
          },
          "phpstan.noProgress": {
            "type": "boolean",
            "default": true,
            "description": "PhpStan no progress output"
          },
          "phpstan.memoryLimit": {
            "type": "string",
            "default": "512M",
            "description": "PhpStan memory limit"
          },
          "phpstan.configuration": {
            "type": "string",
            "default": null,
            "description": "PhpStan configuration path"
          },
          "phpstan.autoloadFile": {
            "type": "string",
            "default": null,
            "description": "PhpStan autoload-file path"
          },
          "phpstan.binPath": {
            "type": "string",
            "default": "phpstan",
            "description": "Path to phpstan executable"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "extension.phpstanLintThisFile",
        "title": "PhpStan: Lint this file"
      },
      {
        "command": "extension.phpstanLintThisFolder",
        "title": "PhpStan: Lint this folder"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "extension.phpstanLintThisFolder"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.40.0",
    "glob": "^7.1.5",
    "mocha": "^6.2.2",
    "typescript": "^3.6.4",
    "tslint": "^5.20.0",
    "vscode-test": "^1.2.2"
  }
}
